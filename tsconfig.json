{
    "buildOnSave": false,
    "compileOnSave": false,
    "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noStrictGenericChecks": true,
        "lib": ["es2017", "dom"],
        "outDir": "./dist/out-tsc",
        "target": "es2015",
        "module": "esnext",
        "baseUrl": "./",
        "rootDir": "./",
        "paths": {
            "ngx-jsonapi-material": ["dist/ngx-jsonapi-material"],
            "ngx-jsonapi-material/*": ["dist/ngx-jsonapi-material/*"]
        },
        "typeRoots": ["node_modules/@types"],
        "strict": false
    },
    "exclude": [
        "node_modules",
        "**/*/node_modules",
        "src/schematics/src/*/files/**/*"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
